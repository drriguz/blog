<article class="card blog-item">
    <div class="card-content">
        <div class="blog-content">
            <a href="<%- url_for(post.path) %>" class="blog-title"><%= post.title %></a>
            <div class="subtitle blog-meta">
                <div class="blog-published-time">
                    <%- date(post.date, "YYYY-MM-DD") %>
                </div>
                <div class="blog-categories">
                <% for(var i = 0; i < post.categories.length; i++) { %>
                    <a href="<%- url_for(post.categories.data[i].path) %>">
                        <span class="subheader blog-link">/ <%= post.categories.data[i].name %></span>
                    </a>
                <% } %>
                </div>
            </div>
            <%- post.excerpt %>
            <a href="<%- url_for(post.path) %>" class="blog-link">[阅读更多...]</a>
            <div class="blog-tags">
                <% for(var i = 0; i < post.tags.length; i++) { %>
                    <a href="<%- url_for(post.tags.data[i].path) %>">
                        <span class="tag is-primary is-light"><%= post.tags.data[i].name %></span>
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</article>