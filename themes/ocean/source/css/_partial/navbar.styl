.navbar
  position relative
  padding-top 3rem
  text-align center
  .nav
    list-unstyled()
    .nav-item-link
      display block
      padding 1rem;
      color sea-dark
      text-decoration none
      cursor pointer
      &:hover
        color link-hover-color
    &.nav-main
      .nav-item-link
        &::before, i.fe
          display block
          line-height 1
        &::before
          font-family 'feathericon'
      .nav-item
        &:nth-child(1)        
          .nav-item-link
            &::before
              content '\f12f'
        &:nth-child(2)         
          .nav-item-link
            &::before
              content '\f12a'
        &:nth-child(3)         
          .nav-item-link
            &::before
              content '\f11e'

        &:nth-child(4)
          .nav-item-link
            &::before
              content '\f195'
        &:nth-child(5) 
          .nav-item-link
            &::before
              content '\f153'

        &:nth-child(6) 
          .nav-item-link
            &::before
              content '\f174'
        &:nth-child(7) 
          .nav-item-link
            &::before
              content '\f12c'

.navbar-bottom
  position absolute
  bottom 0
  width 100%

.logo
  text-align center
  img
    width brand-size

