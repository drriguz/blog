<section class="jumbotron">
  <div class="video">
    <% if (theme.background.overlay) { %>
      <div class="video-frame">
        <img src="<%- theme.background.overlay_path %>" alt="Decorative image frame">
      </div>
    <% } %>
    <div class="video-media">
      <video playsinline="" autoplay="" loop="" muted="" data-autoplay=""
             poster="<%- theme.background.cover %>" x5-video-player-type="h5">
        <source src="<%- theme.background.mp4 %>" type="video/mp4">
        <source src="<%- theme.background.ogv %>" type="video/ogg">
        <source src="<%- theme.background.webm %>" type="video/webm">
        <p>Your user agent does not support the HTML5 Video element.</p>
      </video>
      <div class="video-overlay"></div>
    </div>
    <div class="video-inner text-center text-white">
      <h1><a href="<%- url_for() %>"><%= config.title %></a></h1>
      <p><%= config.subtitle %></p>
      <div><img src="/images/fd.png" class="brand" alt="<%= config.title %>"></div>
    </div>
    <div class="video-learn-more">
      <a class="anchor" href="#landingpage"><i class="fe fe-mouse"></i></a>
    </div>
  </div>
</section>
