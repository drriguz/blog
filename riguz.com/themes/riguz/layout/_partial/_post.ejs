<div class="blog-post">
    <h6><a href="<%- url_for(post.path) %>" class="blog-title"><%= post.title %></a></h6>
    <small class="subheader"><%- date(post.date, "YYYY-MM-DD") %></small>
    <% for(var i = 0; i < post.categories.length; i++) { %>
    <a href="<%- url_for(post.categories.data[i].path) %>">
        <small class="subheader blog-link">in [<%= post.categories.data[i].name %>]</small>
    </a>
    <% } %>
    <p><%- post.excerpt %></p>
    <div>
        <% for(var i = 0; i < post.tags.length; i++) { %>
        <a href="<%- url_for(post.tags.data[i].path) %>">
            <span class="blog-tag"><i class="fa fa-tag"></i><%= post.tags.data[i].name %></span>
        </a>
        <% } %>
    </div>
    <hr>
</div>
