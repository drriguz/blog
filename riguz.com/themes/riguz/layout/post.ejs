          admin: ['soleverlee'],
          id: '<%= page.path %>',      // Ensure uniqueness and length less than 50
          distractionFreeMode: false  // Facebook-like distraction free mode
        })
        gitalk.render('blog-page-comment-container')
      </script>
    </div>
  </div>
</article>