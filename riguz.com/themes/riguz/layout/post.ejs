
<article class="grid-container">
  <div class="grid-x grid-margin-x" id="content">
    <div class="medium-9 cell">
      <h4><%= page.title %></h4>
      <small class="subheader"><%- date(page.date, "YYYY-MM-DD") %></small>
      <% for(var i = 0; i < page.categories.length; i++) { %>
      <small class="subheader"><%= page.categories.data[i].name %></small>
      <% } %>
      <div class="blog-content">
      <%- page.content %>
      </div>
      <div>
        <% for(var i = 0; i < page.tags.length; i++) { %>
        <span class="blog-tag"><i class="fa fa-tag"></i><%= page.tags.data[i].name %></span>
        <% } %>
      </div>
    </div>
  </div>
</article>